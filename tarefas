public class Media {
    public static void main(String[] args) {
        double x = 7.5;
        double y = 5.0;
        double z = 6.5;

        double media = (x + y + z) / 3.0;

        if (media >= 7.0) {
            System.out.println("Aprovado");
        } else {
            System.out.println("Reprovado");
        }
    }
}


public class Main {
    public static void main(String[] args) {
    int x = 0;
    int y = 2;
    if (x > y) {
        System.out.println("Variavel x eh maior");
    } else if ( x < y ) {
        System.out.println("Variavel y eh maior");
    } else {
        System.out.println("Eles sao iguais");
    }}}



import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Pessoa p = new Pessoa();

        System.out.println("informe o peso");
        p.setPeso (scanner.nextDouble());
        System.out.println("informe a altura");
        p.setAltura(scanner.nextDouble());
        p.Calcula_IMC();
        System.out.println(p.getIMC());

    }}

public class Pessoa {

    private double IMC;
    private double altura;
    private double peso;

    public void Calcula_IMC() {
        IMC = peso / (altura * altura);
    }

    public double getIMC() {
        return IMC;
    }

    public void setPeso(double peso) {
        this.peso = peso;
    }

    public void setAltura(double altura) {
        this.altura = altura;
    }
}





